{
  "manifest_version": 3,
  "name": "IBIS+",
  "version": "1.1",
  "description": "Förbättrar IBIS (statistik.innebandy.se), med ett lags fem senaste resultat och relativa förändringar.",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://statistik.innebandy.se/*"],
  "permissions": ["webNavigation", "storage"],
  "icons": {
    "16": "images/ibis+16.png",
    "32": "images/ibis+32.png",
    "48": "images/ibis+48.png",
    "128": "images/ibis+128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://statistik.innebandy.se/ft.aspx*"],
      "js": ["content.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["http://statistik.innebandy.se/"],
      "js": ["homepage.js"],
      "css": ["homepage.css"]
    },
    {
      "matches": ["http://statistik.innebandy.se/*"],
      "js": ["global.js"]
    }
  ]
}
